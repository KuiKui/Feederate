<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />

    <title>{% block title %}Welcome!{% endblock %}</title>

    <!-- Bootstrap core CSS -->
    {% stylesheets
      'bundles/feederatefeederate/bootstrap/css/bootstrap.css'
      'bundles/feederatefeederate/css/app.less'
      'bundles/feederatefeederate/css/home.less'
      filter='cssrewrite'
    %}
      <link rel="stylesheet" type='text/css' href="{{ asset_url }}" />
    {% endstylesheets %}

    {% javascripts
        '//code.jquery.com/jquery-1.10.2.min.js'
        '//ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular.min.js'
        '//ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular-resource.min.js'
        '//ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular-sanitize.min.js'
        '//cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.min.js'
        '//raw2.github.com/sparkalow/angular-truncate/master/src/truncate.js'
        '//momentjs.com/downloads/moment.min.js'
        '//cdn.jsdelivr.net/restangular/1.2.0/restangular.min.js'
        '@FeederateFeederateBundle/Resources/public/bootstrap/js/bootstrap.min.js'
        '@FeederateFeederateBundle/Resources/public/js/app.js'
        '@FeederateFeederateBundle/Resources/public/js/ngInfiniteScroll.js'
        '@FOSJsRoutingBundle/Resources/public/js/router.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

    {% if app.request.host in ['95.142.165.136', 'feederate.me'] %}
    <script>
      var _gauges = _gauges || [];
      (function() {
          var t   = document.createElement('script');
          t.type  = 'text/javascript';
          t.async = true;
          t.id    = 'gauges-tracker';
          t.setAttribute('data-site-id', '52d94303eddd5b3773001108');
          t.src = '//secure.gaug.es/track.js';
          var s = document.getElementsByTagName('script')[0];
          s.parentNode.insertBefore(t, s);
      })();
    </script>
    {% endif %}

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>

    <div class="navbar" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="{{ path('feederate_feederate_front_index') }}">Feederate</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
              {% if is_granted("ROLE_SUPER_ADMIN") %}
                <li><a href="{{ path('feederate_feederate_admin_index') }}">Admin</a></li>
              {% endif %}
              <li><a href="{{ path('feederate_feederate_settings_index') }}">Settings</a></li>
              <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
            {% else %}
              <li><a href="{{ path('fos_user_security_login') }}">Sign In</a></li>
            {% endif %}
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <div class="container">
        {% block body %}{% endblock %}
    </div><!-- /.container -->
  </body>
</html>
