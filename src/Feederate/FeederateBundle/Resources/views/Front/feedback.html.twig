{% extends '::symfony.html.twig' %}

{% block body %}
<div class="container">
    <h1>Feedback</h1>
    <form class="form-horizontal" role="form" action="{{ path('feederate_feederate_front_feedback') }}" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'col-sm-1 control-label'}}) }}
            <div class="col-sm-11">
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'my.email@example.com'}}) }}
            </div>
        </div>
        
        <div class="form-group">
            {{ form_label(form.message, 'Message', {'label_attr': {'class': 'col-sm-1 control-label'}}) }}
            <div class="col-sm-11">
                {{ form_widget(form.message, {'attr': {'class': 'form-control', 'placeholder': 'My message for Feederate development team.'}}) }}
            </div>
        </div>

        {{ form_rest(form) }}

        <div class="form-group">
            <div class="col-sm-offset-1 col-sm-11">
                <button type="submit" class="btn btn-primary">Send feedback</button>
            </div>
        </div>
    </form>
</div>
{% endblock %}