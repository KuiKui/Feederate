{% extends '::base.html.twig' %}

{% block body %}
<div id="feederate" ng-app="feederate" ng-controller="BoardCtrl">
    <ul class="feeds-nav nav">
        {% verbatim %}
        <li>
            <input ng-enter="addFeed()" ng-model="newFeedUrl" type="text" id="addFeed" placeholder="Adding a new feed here..">
        </li>
        <li ng-repeat="feed in feeds">
            <a href="#" ng-click="loadSummaries(feed.id);loadEntries(feed.id);">
                {{ feed.title }}
                <span class="bullet bullet-unread pull-right">5</span>
            </a>
        </li>
        {% endverbatim %}
    </ul>
    <ul class="entries-nav nav">
        {% verbatim %}
        <li ng-repeat="summary in summaries">
            <a ng-click="loadEntry(summary)" ng-class="{read: summary.read}">
                <h3>{{ summary.title }}</h3>
                <p ng-bind-html="summary.description|characters:100"></p>
            </a>
        </li>
        {% endverbatim %}
    </ul>
    <div class="entry">
        <div class="container">
            {% verbatim %}
            <h2>{{ entry.title }}</h2>
            <div ng-bind-html="entry.content"></div>
            {% endverbatim %}
        </div>
    </div>

{% endblock %}
