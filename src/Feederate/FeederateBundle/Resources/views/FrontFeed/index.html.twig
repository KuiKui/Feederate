{% extends '::base.html.twig' %}

{% block body %}
<div ng-app="feederate" ng-controller="BoardCtrl">
    <ul class="feeds-nav nav">
        {% verbatim %}
        <li>
            <input ng-enter="addFeed()" ng-model="newFeedUrl" type="text" id="addFeed" placeholder="Adding a new feed here..">
        </li>
        <li ng-repeat="feed in feeds">
            <a href="#">
                {{ feed.title }}
                <span class="bullet bullet-unread pull-right">5</span>
            </a>
        </li>
        {% endverbatim %}
    </ul>
    <div class="col-md-3">
        Entries
    </div>
    <div class="col-md-6">
        Contents
    </div>

{% endblock %}
